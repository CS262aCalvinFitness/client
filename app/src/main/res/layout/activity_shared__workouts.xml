<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shared__workouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.calvinfitness.Shared_Workouts">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="@string/share_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/textView5"
            android:textSize="25sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:id="@+id/spinner" />

        <TextView
            android:text="@string/share_workouts"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="25dp"
            android:id="@+id/textView7"
            android:textSize="25sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:id="@+id/workout_spinner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SharedWorkoutName"
            android:layout_weight="0.34"
            android:textSize="18sp" />

        <Button
            android:text="@string/shared_workout_view"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/view_shared_workout_button"
            android:onClick="ViewWorkout" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_weight="0.40"
            android:id="@+id/shared_workout_exercise" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <Button
                android:text="@string/shared_workout_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/save_shared_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.09"
                android:onClick="SaveWorkout"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
