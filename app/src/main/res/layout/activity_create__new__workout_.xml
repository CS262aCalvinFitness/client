<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create__new__workout_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.calvinfitness.Create_New_Workout_Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/Workout_Name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:textSize="14sp" />

        <EditText
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/WorkoutName_EditText"
            android:ems="10"
            android:id="@+id/WorkoutName_Edit" />

        <TextView
            android:text="@string/Date_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_weight="1"
            android:textSize="14sp" />

        <EditText
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/WorkoutDate_Edit"
            android:text="@string/WorkoutDate_EditText" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <Spinner
            android:layout_width="149dp"
            android:layout_height="49dp"
            android:id="@+id/SelectExercise_Spinner"
            android:layout_marginTop="50dp" />

        <Button
            android:text="@string/EnterNewExercise_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EnterNewExecise_Button"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

</RelativeLayout>
